                       value="@(string.IsNullOrWhiteSpace(Model.MediaUrl)?"":Href("~/Uploads/"+Model.MediaUrl))"
                       type="hidden" />
                <img src="@(string.IsNullOrWhiteSpace(Model.MediaUrl)?"":Href("~/Uploads/"+Model.MediaUrl))" id="news-image" />
